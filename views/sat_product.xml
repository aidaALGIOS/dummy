<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<!-- VIEWS FOR THE PRODUCT CLASS -->
		
		<record model="ir.ui.view" id="product_form">
			<field name="name">product_ext_form_view</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
	
				<form string="Product" version="7.0">
					<sheet>
						<h1>
							<field name="name" placeholder="Product Title" />
						</h1>
						<group>
							<field name="description"/>
						</group>
					</sheet>
				</form>
	
			</field>
		</record>		

	
		<!-- WINDOW ACTIONS -->

		<record model="ir.actions.act_window" id="product_list_action">
			<field name="name">Products</field>
			<field name="res_model">product.template</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first product</p>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="sat_config_action">
			<field name="name">Products</field>
			<field name="res_model">product.template</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">Create the first product</p>
			</field>
		</record>
		
		


	</data>
</openerp>

