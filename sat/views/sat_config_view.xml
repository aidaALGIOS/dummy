<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sat_config_view" model="ir.ui.view">
            <field name="name">sat configuration</field>
            <field name="model">sat.config.settings</field>
            <field name="arch" type="xml">
                <form string="SAT configuration" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <group string="SAT Management">
                        <label for="id" string="Configuration"/>
                        <div>
                            <div>
                                <field name="group_manage_equipments"/>
                                <label for="group_manage_equipments"/>
                            </div>
                            <div>
                                <field name="group_manage_contracts"/>
                                <label for="group_manage_contracts"/>
                            </div>
                            <div>
                                <label for="work_time_rounding"/>
                                <field name="work_time_rounding" class="oe_inline"/>
                            </div>
                            <div>
                                <label for="invoice_time_rounding"/>
                                <field name="invoice_time_rounding" class="oe_inline"/>
                            </div>
                            <div>
                                <field name="register_work_time"/>
                                <label for="register_work_time"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>

        <record id="sat_config_action" model="ir.actions.act_window">
            <field name="name">Configure SAT</field>
            <field name="res_model">sat.config.settings</field>
            <field name="view_id" ref="sat_config_view"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="sat_config_menu" name="SAT" parent="base.menu_config" sequence="99" action="sat_config_action"/>
    </data>
</openerp>