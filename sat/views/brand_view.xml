<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- form view -->
        <record model="ir.ui.view" id="brand_form_view">
            <field name="name">sat.brand.form</field>
            <field name="model">sat.brand</field>
            <field name="arch" type="xml">
                <form string="Brand Form">
                    <sheet>
                        <div>
                            <label for="name"/>
                            <field name="name"/>
                            <label for="description"/>
                            <field name="description"/>
                            <field name="active"/>
                            <label for="active"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- tree view -->
        <record model="ir.ui.view" id="brand_tree_view">
            <field name="name">sat.brand.tree</field>
            <field name="model">sat.brand</field>
            <field name="arch" type="xml">
                <tree string="Brand Tree">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- search view -->
        <record model="ir.ui.view" id="brand_search_view">
            <field name="name">sat.brand.search</field>
            <field name="model">sat.brand</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <!-- window action -->
        <record model="ir.actions.act_window" id="brand_list_action">
            <field name="name">Brand</field>
            <field name="res_model">sat.brand</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first brand</p>
            </field>
        </record>
    </data>
</openerp>